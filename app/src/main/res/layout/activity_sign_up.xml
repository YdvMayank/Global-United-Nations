<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#003777"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffd700"
        android:layout_alignParentTop="true">
    </View>
    <ImageView
        android:id="@+id/gunLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_wave_4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your details"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_above="@id/linearLayout"
        android:textAlignment="center"
        android:textSize="22dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_userName"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edtxt_border"
            android:drawableStart="@drawable/ic_person_white"
            android:layout_marginTop="20dp"
            android:hint="Enter your Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_phoneNUmber"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_phone_white"
            android:hint="Enter your Phone Number"
            android:inputType="phone"
            android:background="@drawable/edtxt_border"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_EmailAddress"
            android:drawablePadding="10dp"
            android:background="@drawable/edtxt_border"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_email_white"
            android:hint="Enter your Email Address"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signUp"
        android:background="@drawable/btn_bg_white"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:text="       Register       "
        android:textColor="@color/black"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/ic_wave_6"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>